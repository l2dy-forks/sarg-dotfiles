set scrollsteps=1
set scrolltime=0
set hlfind
set guioptions+=n
set findcase=smart

imap jk <ESC> 
cmap <C-n> <Tab>
cmap <C-p> <S-Tab>
map <C-h> <nop>
set hintkeys=asdghjklut
map -b j 8j
map -b k 8k

" spacemacs inspired
nmap <Space>bn :tabnext<CR>
nmap <Space>bp :tabprev<CR>
nmap <Space>bm :winonly<CR>
nmap <Space>bd :tabclose<CR>

imap <C-m> <CR>